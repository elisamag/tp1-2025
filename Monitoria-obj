<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Objeto Pessoa</title>
</head>
<body>
    <h2>Cadastro de Pessoa</h2>
    <form id="formPessoa">
        <h3>Nome:</h3>
        <input type="text" id="nome"><br><br>

        <h3>Idade:</h3>
        <input type="number" id="idade"><br><br>

        <h3>Profissão:</h3>
        <input type="text" id="profissao"><br><br>

        <button type="button" onclick="criarPessoa()">Criar Pessoa</button>
    </form>

    <p id="resultado"></p>

    <script>
        function criarPessoa() {
            let pessoa = {
                nome: document.getElementById("nome").value,
                idade: document.getElementById("idade").value,
                profissao: document.getElementById("profissao").value
            };

            document.getElementById("resultado").innerText =
                "Nome: " + pessoa.nome + " | Idade: " + pessoa.idade + " | Profissão: " + pessoa.profissao;
        }
    </script>
</body>
</html>
